<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.carlos.smartcar">

    <!-- Permisos de internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Main2Activity" />
        //Como hay distintos Mains que se ejecutan depeniendo de las acciones, hay que ponerlas
        aqu√≠.
        <activity android:name=".Register">
            //El Register, como su nombre indica, se ejecuta cuando intenta registrarse a la BBDD.
        </activity>
        <activity android:name=".Home">
            //El .home es, sencillamente, el layout y los comandos del login.
        </activity>
        <activity android:name=".MainActivityLOG">
            //El .home es, sencillamente, el layout y los comandos del login.
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".Main3Activity"
            android:label="@string/title_activity_main3"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".faq"
            android:label="@string/title_activity_faq"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>